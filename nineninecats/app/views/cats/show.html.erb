<h2><%= @cat.name %></h2>
<table>
  <tr>
    <th>Color</th>
    <th>Sex</th>
    <th>Age</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%=@cat.color%></td>
    <td><%=@cat.sex%></td>
    <td><%=@cat.age%></td>
    <td><%=@cat.description%></td>
  </tr>
</table>

<br>

<table>
  <tr>
    <th>ID</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
    <th>Action</th>
  </tr>

    <% @requests.each do |request| %>
  <tr>
      <td><%=request.id%></td>
      <td><%=request.start_date%></td>
      <td><%=request.end_date%></td>
      <td><%=request.status%></td>
      <td><%=button_to "APPROVED", rental_approve_url(request.id), method: :patch%></td>
      <td><%=button_to "DENIED", rental_deny_url(request.id), method: :patch%></td>

</tr>
    <% end %>

</table>
